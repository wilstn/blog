<header class="intro-header" style="background-image: url(<%= asset_path('post-bg.jpg') %>)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1><%= @blog.title %></h1>
                    <br>
                    <span class="meta">Posted by <%= @blog.user.username %> on <%= @blog.created_at.strftime("%d %b %y")%></span>
                </div>
            </div>
        </div>
    </div>
</header>
