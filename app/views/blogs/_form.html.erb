<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :post %>
    <%= f.text_area :post , rows: 10, class: "form-control" %>
  </div>
    <%= f.submit 'Submit',class: "btn btn-success pull-right" %>
    <%= link_to 'Cancel', blogs_path, class: 'btn btn-default' %>
<% end %>
